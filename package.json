{
  "name": "accessibility-test-cli",
  "version": "1.0.0",
  "description": "CLI-Tool für automatische Accessibility-Tests basierend auf Sitemap",
  "main": "dist/index.js",
  "bin": {
    "a11y-test": "./bin/a11y-test.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint bin/**/*.js",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "testing",
    "cli",
    "sitemap",
    "playwright"
  ],
  "author": {
    "name": "Jörn Seidel",
    "email": "joern.seidel@casoon.de",
    "url": "https://casoon.de"
  },
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0",
    "fast-xml-parser": "^4.3.2",
    "node-fetch": "^3.3.2",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.11",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 